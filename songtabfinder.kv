<SongTabFinder>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Label:
        text: root.status_text
        font_size: '20sp'
        size_hint_y: None
        height: 50

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        Button:
            text: 'Record'
            on_press: root.start_recording(self)
        Button:
            text: 'Clear'
            on_press: root.clear_results(self)

    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        Label:
            text: 'Auto-open:'
            size_hint_x: None
            width: 100
        Spinner:
            id: tab_source
            text: 'Off'
            values: 'Off', 'Songsterr', 'UG'
            size_hint_x: None
            width: 150

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        Label:
            text: root.songsterr_link
            font_size: '16sp'
            color: [0, 0.7, 0.9, 1] if root.songsterr_link.startswith('http') else [1, 1, 1, 1]
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            on_touch_down: root.open_songsterr_url(self, args[1])
        Label:
            text: root.ug_link
            font_size: '16sp'
            color: [0, 0.7, 0.9, 1] if root.ug_link.startswith('http') else [1, 1, 1, 1]
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            on_touch_down: root.open_ug_url(self, args[1])

    Button:
        text: 'Donate'
        size_hint_y: None
        height: 50
        on_press: root.open_donate(self)